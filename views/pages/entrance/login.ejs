<div id="login" v-cloak>
  <div class="container-fluid pt-5 pb-5">
    <h1 class="text-center">Faça login em sua conta</h1>
    <div style="max-width: 450px;" class="mx-auto">
      <hr/>
      <ajax-form action="login" :syncing.sync="syncing" :cloud-error.sync="cloudError" :form-data="formData" :form-rules="formRules" :form-errors.sync="formErrors" @submitted="submittedForm()">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Login" :class="[formErrors.login ? 'is-invalid' : '']" v-model.trim="formData.login" autocomplete="login" focus-first>
          <div class="invalid-feedback" v-if="formErrors.login">Por favor, forneça um login válido.</div>
        </div>
        <div class="form-group">
          <input type="password" class="form-control" placeholder="Senha" :class="[formErrors.senha ? 'is-invalid' : '']" v-model.trim="formData.senha" autocomplete="current-senha">
          <div class="invalid-feedback" v-if="formErrors.senha">Por favor, insira sua senha.</div>
        </div>
        <div class="form-group form-check">
          <input class="form-check-input" type="checkbox" id="remember" name="rememberMe" v-model="formData.rememberMe"/>
          <label class="form-check-label" for="remember">Lembrar-se</label>
        </div>
        <cloud-error v-if="cloudError==='badCombo'">As credenciais inseridas não estão associadas a uma conta. Verifique seu e-mail e / ou senha e tente novamente.</cloud-error>
        <cloud-error v-else-if="cloudError"></cloud-error>
        <div class="form-group">
          <ajax-button :syncing="syncing" class="btn-dark btn-lg btn-block">Entrar</ajax-button>
        </div>
      </ajax-form>
      <p class="text-center"><a href="/password/forgot">Esqueceu sua senha?</a></p>
    </div>
  </div>
</div>
<%- /* Expose locals as `window.SAILS_LOCALS` :: */ exposeLocalsToBrowser() %>
